generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Board {
  ownerId   String
  id        Int     @default(autoincrement()) @id
  name      String
  columns   Column[]
}

model Column {
  id        Int     @default(autoincrement())
  name      String

  boardId   Int?
  board     Board?   @relation(fields: [boardId], references: [id])

  tasks     Task[]

  @@id([id, name])
}


model Task {
  id          Int     @default(autoincrement()) @id
  title       String
  description String  
  
  column      Column?   @relation(fields: [coloumnId, status], references: [id, name])
  coloumnId   Int?
  status      String
  
  subtasks    Subtask[]
} 

model Subtask {
  id          Int     @default(autoincrement()) @id
  title       String
  isComplete  Boolean @default(false)
  
  task        Task?   @relation(fields: [taskId], references: [id])
  taskId      Int?
}

